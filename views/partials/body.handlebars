<center>
  <div class="inner cover">
    <br>
    <br>
    <a style="text-decoration:none; color:white" href='./' title='Back to home'>
      <h1 class="cover-heading" style="font-family: 'Roboto', sans-serif;">Show me your Github</h1>
    </a>

    <br>
    <div class="container">
      <div class="row">
        <div class="order-md-2 col-md-6">
          <form id="search-form" action="" method="get" action="#">
            <div class="input-group">
              <input type="text" class="form-control" autofocus="autofocus" id="username" name="username" placeholder="Github username"
                required>
              <button type="submit" class="input-group-addon btn" name="" onClick="showLoader();">
                <i class="fa fa-search"></i>
              </button>
            </div>
          </form>
        </div>
        <div class="col-md-3"></div>
      </div>
    </div>
  </div>
  <div id="overlay">
    <div class="spinner"></div>
  </div>
  <div id="realContent">
    <center>
      <h3>{{msg}}</h3>
      {{#if show.result}}
      <div class="result">
        <div class="container">
          {{#if type}}
            <img class="img-organisation" src="public/img/blue-check.png" title='{{username}}' alt='{{username}}'/>
          {{/if}}
          <img class="img-circle" src='{{avatar}}'>
          <br>
          <div class="row">
            <div class="col-md-12">
              <h4> {{repos}} {{showEmoji}}</h4>
              <p class="random-statement">{{statement}}</p>
            </div>
          </div>
        </div>
        {{#if show.chart}}
          <div>
            <div
              id="canvas-container"
              data-username='{{username}}'
              data-languages='{{languages}}'
              data-colors='{{colors}}'
            >
              <canvas id="myChart" style="cursor:pointer;"></canvas>

              <div> <!--container buttons and limit repo message -->
              <script>
                let singleColor = chart({ limit: 20 })
              </script>

                {{#if limitLabel}}
                  <div class="message">For users with a lot of repo, only top 20 Languages are displayed.</div>
                {{/if}}

              </div>
            </div>
          </div>
          <br>
        {{/if}}
      </div>
      {{else}}
        <img src="public/img/octocats.png" style="width: 25%;" alt="" srcset="">
      {{/if}}
    </center>
</center>

<script src="public/js/spinner.js"></script>
